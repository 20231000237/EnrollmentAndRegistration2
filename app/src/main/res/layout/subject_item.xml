<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/label1"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/courseCodeLabel"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Course Code:  "/>

        <TextView
            android:id="@+id/courseCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GED0001"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/label2"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/subjectNameLabel"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Name:  "/>

        <TextView
            android:id="@+id/subjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physics 1"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/label3"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/unitsLabel"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Units:  "/>

        <TextView
            android:id="@+id/units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/label4"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scheduleLabel"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Schedule:  "/>

        <TextView
            android:id="@+id/schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M | 13:00-15:40"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/label5"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profLabel"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Course Code:  "/>

        <TextView
            android:id="@+id/prof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ms. Daemon"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
